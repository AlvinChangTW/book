<%=form_for @novel, :url => novels_path, :method => :post do |f| %>
  <%=f.label :name, "小說名稱"%>
  <%=f.text_field :name %>
  <%=f.label :genre, "小說類型"%>
  <%=f.text_field :genre %>
  <%=f.label :description, "小說簡介"%>
  <%=f.text_area :description %>
  <%=f.submit "新增小說"%>
<%end%>

<%=link_to "返回主頁", novels_path%>