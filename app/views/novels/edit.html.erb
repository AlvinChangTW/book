<%=form_for @novel, :url => novel_path(@novel), :method => :patch do |f| %>
  <%=f.label :name, "小說名稱"%>
  <%=f.text_field :name %>
  <%=f.label :genre, "小說類型"%>
  <%=f.text_field :genre %>
  <%=f.label :description, "小說簡介"%>
  <%=f.text_area :description %>
  <%=f.submit "修改內容"%>
<%end%>

<%=link_to "返回主頁", novels_path%>